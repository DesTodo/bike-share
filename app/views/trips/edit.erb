<h1>Edit Trip</h1>

<form action="/trips/<%= @trip.id %>" method="post">
  <input type="hidden" name="_method" value="PUT">

  <label> Duration: </label>
  <input type="number" name="trip[duration]" value="<%= @trip.name %>">

  <label> Start Date: ></label>
  <input type="date" name="trip[start_date_id]" value="<%= @trip.start_date.date %>">

  <label> Start Station Name: </label>
  <input list="names" type="text" name="trip[start_station_id]" value="<%= @trip.start_station.name %>">
    <datalist>
                      <%= @stations.each do |station| %>
              <option value="<%= station.name %>" > </option>
                      <%= end %>
    </datalist>

  <label> End Date: </label>
  <input type="date" name="trip[end_date_id]" value="<%= @trip.end_date.date %>">

<label> End Station Name: </label>
  <input list="names" type="text" name="trip[end_station_id]" value="<%= @trip.end_station_id.name %>">
    <datalist>
                  <%= @stations.each do |station| %>
              <option value="<%= station.name %>" > </option>
                  <%= end %>
    </datalist>

  <label> Bike ID:</label>
  <input list="ids" type="number" name="trip[bike_id]" value="<%= @trip.bike_id %>">
    <datalist>
            <% @bikes.each do |bike| %>
        <option value="<%= bike.id %>" >
                  <%= end %>
        </option>
    </datalist>

    <label> Substription Type: </label>
    <input list="types" type="text" name="trip[substription_type]" value="<%= @trip.substription_type %>">
      <datalist>
        <option value="Customer" </option>
        <option value="Subscriber" </option>
      </datalist>

  <button type="submit">Edit Station</button>
</form>
